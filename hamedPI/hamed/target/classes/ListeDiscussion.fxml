<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="822.0" prefWidth="1286.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ListeDiscussionController">
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="200.0" spacing="25.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="80.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" styleClass="logo">
               <image>
                  <Image url="@img/logo-alfirma.jpg" />
               </image>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </ImageView>
            <Pane prefHeight="150.0" prefWidth="732.0" />
            <Button onAction="#naviguateToConvList" prefHeight="39.0" prefWidth="412.0" styleClass="menu-btn" text="Discussions" />
            <Button onAction="#naviguateToAdd" prefHeight="39.0" prefWidth="449.0" styleClass="menu-btn" text="Ajouter Discussion" />
            <Button fx:id="themeSwitchButton" onAction="#switchTheme" prefHeight="36.0" prefWidth="94.0" style="-fx-background-radius: 18px; -fx-font-size: 18px; -fx-padding: 6 16; -fx-background-color: #F0F4FA; -fx-text-fill: #4F8CFF;" text="🌙/☀️" />
            <ColorPicker fx:id="userColorPicker" onAction="#handleUserColorChange" styleClass="user-color-picker" />
         </children>
      </HBox>
   </top>
   <center>
      <StackPane>
         <children>
            <VBox fx:id="DiscussionList" prefHeight="600.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <ScrollPane hbarPolicy="NEVER" prefHeight="600.0" prefWidth="1200.0">
                     <content>
                        <VBox fx:id="DiscussionContainer" alignment="TOP_CENTER" prefHeight="600.0" prefWidth="1200.0" spacing="20.0">
                           <children>
                              <TextField fx:id="searchField" onKeyReleased="#handleSearch" promptText="Rechercher une discussion...">
                                 <VBox.margin>
                                    <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                                 </VBox.margin>
                              </TextField>
                           </children>
                           <padding>
                              <Insets bottom="0.0" left="0.0" right="0.0" top="0.0" />
                           </padding>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
            <VBox fx:id="MessageList" alignment="TOP_CENTER" fillWidth="false" prefHeight="200.0" prefWidth="1000.0" visible="false">
               <children>
                  <TextField fx:id="searchMessageField" onKeyReleased="#handleMessageSearch" promptText="Rechercher un message...">
                     <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </VBox.margin>
                  </TextField>
                  <VBox alignment="BOTTOM_CENTER" prefHeight="613.0" prefWidth="1000.0" spacing="20.0" style="-fx-background-color: lightgray;">
                     <children>
                        <ScrollPane hbarPolicy="NEVER" prefHeight="565.0" prefWidth="1000.0" style="-fx-background-color: transparent;">
                           <content>
                              <VBox fx:id="MessageContainer" prefHeight="-1" prefWidth="-1" spacing="10.0">
                                 <padding>
                                    <Insets left="10.0" top="20.0" />
                                 </padding>
                              </VBox>
                           </content>
                        </ScrollPane>
                        <Label fx:id="typingLabel" style="-fx-font-style: italic; -fx-text-fill: #4F8CFF; -fx-padding: 0 0 0 20;" text="" visible="false" />
                        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="5.0">
                                 <children>
                                    <Button onAction="#setBold" style="-fx-font-weight: bold; -fx-background-radius: 18px; -fx-font-size: 16px;" text="B" />
                                    <Button onAction="#setItalic" style="-fx-font-style: italic; -fx-background-radius: 18px; -fx-font-size: 16px;" text="I" />
                                    <Button onAction="#setUnderline" style="-fx-underline: true; -fx-background-radius: 18px; -fx-font-size: 16px;" text="U" />
                                 </children>
                              </HBox>
                              <TextField fx:id="messageContent" maxWidth="-Infinity" prefHeight="47.0" prefWidth="900.0" promptText="Envoyer un Message">
                                 <font>
                                    <Font name="Arial" size="12.0" />
                                 </font>
                              </TextField>
                              <ImageView fitHeight="35.0" fitWidth="35.0" onMouseClicked="#addMsg" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@img/send.png" />
                                 </image>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </ImageView>
                           </children>
                           <padding>
                              <Insets bottom="10.0" top="10.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <StackPane.margin>
                  <Insets top="50.0" />
               </StackPane.margin>
            </VBox>
            <VBox fx:id="AddConvForm" alignment="TOP_CENTER" prefHeight="793.0" prefWidth="1286.0" spacing="20.0" visible="false">
               <padding>
                  <Insets left="50.0" right="50.0" top="20.0" />
               </padding>
               <children>
                  <Label styleClass="title-label" text="Ajout Discussion">
                     <font>
                        <Font name="Arial" size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="titreDiscussion" promptText="Titre">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
                  <TextArea fx:id="DescriptionDiscussion" prefHeight="200.0" prefWidth="200.0" promptText="Description">
                     <font>
                        <Font name="Arial" size="15.0" />
                     </font>
                  </TextArea>
                  <ColorPicker fx:id="couleurDiscussion" />
                  <Label fx:id="erreurMsg" styleClass="error-message" />
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="100.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#AjoutDiscussion" styleClass="button-ajout" text="Ajouter">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#AnnulerDiscussion" styleClass="button-annuler" text="Annuler">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </StackPane>
   </center>
   <StackPane fx:id="confirmationPane" styleClass="confirmation-pane" visible="false" BorderPane.alignment="CENTER">
      <HBox alignment="CENTER" spacing="20" styleClass="confirmation-bar">
         <Label fx:id="confirmationLabel" styleClass="confirmation-label" text="Confirmer la suppression ?" />
         <Button fx:id="btnConfirm" styleClass="btn-confirm" text="Oui" />
         <Button fx:id="btnCancel" styleClass="btn-cancel" text="Non" />
      </HBox>
   </StackPane>
</BorderPane>

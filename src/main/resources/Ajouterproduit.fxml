<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Ajouterproduit" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
   <Label text="Ajouter un Produit" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

   <Label text="Nom du Produit" />
   <TextField fx:id="nomProduitField" promptText="Entrez le nom du produit" />

   <Label text="Description" />
   <TextArea fx:id="descriptionArea" promptText="Entrez la description" wrapText="true" />

   <Label text="Quantité" />
   <TextField fx:id="quantiteField" promptText="Entrez la quantité" />

   <Label text="Prix" />
   <TextField fx:id="prixField" promptText="Entrez le prix (ex: 12.5)" />

   <Label text="Catégorie" />
   <ComboBox fx:id="categorieComboBox" onAction="#handleCategorieChange" promptText="Sélectionnez une catégorie" />

   <Label text="Image du Produit" />
   <ImageView fx:id="productImage" fitWidth="200" fitHeight="200" preserveRatio="true" />
   <Button fx:id="uploadButton" text="Charger une Image" onAction="#handleUploadImage" />

   <Label text="Pourcentage de Réduction (%)" />
   <TextField fx:id="discountPercentageField" promptText="Entrez le pourcentage (0-100)" />

   <Label text="Code Promo" />
   <TextField fx:id="codePromoField" promptText="Code promo généré" />

   <Button fx:id="ajout" text="Ajouter Produit" onAction="#ajouterproduit" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
</VBox>
<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane styleClass="event-details-pane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EventDetails">
    <children>
        <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="scroll-pane">
            <content>
                <VBox alignment="TOP_LEFT" spacing="20" styleClass="event-card" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                    </padding>
                    <children>
                        <Text fx:id="txtTitre" styleClass="event-title" />
                        <Label styleClass="section-label" text="Description :" />
                        <TextArea fx:id="txtDescription" editable="false" styleClass="event-textarea" wrapText="true" />
                        <Label styleClass="section-label" text="Dates :" />
                        <Text fx:id="txtDates" styleClass="event-text" />
                        <Label styleClass="section-label" text="Lieu :" />
                        <Text fx:id="txtLieu" styleClass="event-text" />
                        <Label styleClass="section-label" text="Informations pratiques :" />
                        <Text fx:id="txtInfos" styleClass="event-text" />
                        <HBox alignment="CENTER" spacing="20">
                            <children>
                                <Button fx:id="btnInscription" onAction="#handleInscription" styleClass="action-button, primary-button" text="S'inscrire" />
                                <Button fx:id="btnTranslateEn" onAction="#handleTranslateEn" styleClass="action-button, secondary-button" text="Traduire en anglais" />
                                <Button fx:id="btnTranslateAr" onAction="#handleTranslateAr" styleClass="action-button, secondary-button" text="Traduire en arabe" />
                            </children>
                            <padding>
                                <Insets top="20.0" />
                            </padding>
                        </HBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
    <stylesheets>
        <URL value="@eventstyles.css" />
    </stylesheets>
</AnchorPane>
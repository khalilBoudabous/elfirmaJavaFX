<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.salah.appcrud.utilisateur.UtilisateurController">

    <VBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">

        <!-- Padding for better visuals -->
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>

        <!-- Form fields for the user -->
        <HBox spacing="10">
            <TextField fx:id="nomField" promptText="Nom" />
            <TextField fx:id="prenomField" promptText="Prénom" />
        </HBox>

        <HBox spacing="10">
            <TextField fx:id="emailField" promptText="Email" />
            <TextField fx:id="telephoneField" promptText="Téléphone" />
        </HBox>

        <HBox spacing="10">
            <TextField fx:id="roleField" promptText="Rôle" />
            <PasswordField fx:id="mdpField" promptText="Mot de passe" />
        </HBox>

        <!-- Buttons to add, modify, or delete a user -->
        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#ajouterUtilisateur" text="Ajouter" />
            <Button onAction="#modifierUtilisateur" text="Modifier" />
            <Button onAction="#supprimerUtilisateur" text="Supprimer" />
        </HBox>

        <!-- Button to handle terrain management -->
        <HBox alignment="CENTER" spacing="5">
            <Button fx:id="btnGestionTerrain" onAction="#handleGestionTerrain" text="Gestion Terrains" />
        </HBox>

        <!-- Table to display users -->
        <TableView fx:id="tableView" prefHeight="200" prefWidth="600">
            <columns>
                <TableColumn fx:id="colNom" prefWidth="100" text="Nom" />
                <TableColumn fx:id="colPrenom" prefWidth="100" text="Prénom" />
                <TableColumn fx:id="colEmail" prefWidth="150" text="Email" />
                <TableColumn fx:id="colTel" prefWidth="100" text="Téléphone" />
                <TableColumn fx:id="colRole" prefWidth="100" text="Rôle" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>

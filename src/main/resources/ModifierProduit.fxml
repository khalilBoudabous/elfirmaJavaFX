<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ModifierProduit" style="-fx-background-color: #F5F5F5;">
   <!-- Top: Header -->
   <top>
      <HBox alignment="CENTER" style="-fx-background-color: #2E7D32; -fx-padding: 20;">
         <Label text="Modifier un Produit" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 1);" />
      </HBox>
   </top>

   <!-- Center: Scrollable Form -->
   <center>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background: #F5F5F5; -fx-border-color: transparent;">
         <VBox alignment="TOP_CENTER" style="-fx-padding: 20 10;">
            <!-- Form Container -->
            <VBox maxWidth="800" style="-fx-padding: 30; -fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-width: 1; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 2);">
               <!-- Product Form -->
               <GridPane hgap="20" vgap="15" alignment="TOP_CENTER">
                  <columnConstraints>
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="300" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="300" />
                  </columnConstraints>

                  <!-- Row 1: Product Name and Quantity -->
                  <VBox spacing="5" alignment="CENTER_LEFT" GridPane.columnIndex="0">
                     <Label text="Nom du Produit" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #2E7D32;" />
                     <TextField fx:id="nomProduitField" promptText="Entrez le nom du produit" style="-fx-border-color: #81C784; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-color: white; -fx-background-radius: 5; -fx-font-size: 14px; -fx-pref-width: 100%;">
                        <tooltip>
                           <Tooltip text="Entrez le nom du produit" />
                        </tooltip>
                     </TextField>
                  </VBox>

                  <VBox spacing="5" alignment="CENTER_LEFT" GridPane.columnIndex="1">
                     <Label text="Quantité" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #2E7D32;" />
                     <TextField fx:id="quantiteField" promptText="Entrez la quantité" style="-fx-border-color: #81C784; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-color: white; -fx-background-radius: 5; -fx-font-size: 14px; -fx-pref-width: 100%;">
                        <tooltip>
                           <Tooltip text="Entrez la quantité disponible" />
                        </tooltip>
                     </TextField>
                  </VBox>

                  <!-- Row 2: Price and Category -->
                  <VBox spacing="5" alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="1">
                     <Label text="Prix" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #2E7D32;" />
                     <TextField fx:id="prixField" promptText="Entrez le prix (ex: 12.5)" style="-fx-border-color: #81C784; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-color: white; -fx-background-radius: 5; -fx-font-size: 14px; -fx-pref-width: 100%;">
                        <tooltip>
                           <Tooltip text="Entrez le prix en USD (ex: 12.5)" />
                        </tooltip>
                     </TextField>
                  </VBox>

                  <VBox spacing="5" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <Label text="Catégorie" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #2E7D32;" />
                     <ComboBox fx:id="categorieComboBox" onAction="#handleCategorieChange" promptText="Sélectionnez une catégorie" style="-fx-border-color: #81C784; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-color: white; -fx-background-radius: 5; -fx-font-size: 14px;" prefWidth="300" />
                  </VBox>

                  <!-- Row 3: Description (full width) -->
                  <VBox spacing="5" alignment="CENTER_LEFT" GridPane.columnSpan="2" GridPane.rowIndex="2">
                     <Label text="Description" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #2E7D32;" />
                     <TextArea fx:id="descriptionArea" promptText="Entrez la description" wrapText="true" prefHeight="100" style="-fx-border-color: #81C784; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-color: white; -fx-background-radius: 5; -fx-font-size: 14px; -fx-pref-width: 100%;" />
                     <Button fx:id="generateDescriptionButton" text="Générer Description" onAction="#generateDescription" style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-alignment: center; -fx-pref-width: 200;" />
                  </VBox>

                  <!-- Row 4: Discount and Promo Code -->
                  <VBox spacing="5" alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="3">
                     <Label text="Pourcentage de Réduction (%)" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #2E7D32;" />
                     <TextField fx:id="discountPercentageField" promptText="Entrez le pourcentage (0-100)" style="-fx-border-color: #81C784; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-color: white; -fx-background-radius: 5; -fx-font-size: 14px; -fx-pref-width: 100%;">
                        <tooltip>
                           <Tooltip text="Entrez le pourcentage de réduction (0-100)" />
                        </tooltip>
                     </TextField>
                  </VBox>

                  <VBox spacing="5" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="3">
                     <Label text="Code Promo" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #2E7D32;" />
                     <TextField fx:id="codePromoField" promptText="Entrez le code promo" style="-fx-border-color: #81C784; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-color: white; -fx-background-radius: 5; -fx-font-size: 14px; -fx-pref-width: 100%;">
                        <tooltip>
                           <Tooltip text="Entrez un code promo (facultatif)" />
                        </tooltip>
                     </TextField>
                  </VBox>

                  <!-- Row 5: Image Upload (full width) -->
                  <VBox spacing="10" alignment="CENTER" GridPane.columnSpan="2" GridPane.rowIndex="4">
                     <Label text="Image du Produit" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #2E7D32;" />
                     <ImageView fx:id="productImage" fitWidth="200" fitHeight="200" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, #81C784, 10, 0.5, 0, 0); -fx-border-color: #388E3C; -fx-border-width: 1; -fx-border-radius: 10;" />
                     <Button fx:id="uploadButton" text="Charger une Image" onAction="#handleUploadImage" style="-fx-background-color: #66BB6A; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8 20; -fx-cursor: hand;" />
                  </VBox>

                  <!-- Row 6: Error Label (full width) -->
                  <Label fx:id="errorLabel" text="" style="-fx-text-fill: #D32F2F; -fx-font-size: 14px; -fx-padding: 10 0 0 0;" GridPane.columnSpan="2" GridPane.rowIndex="5" />
               </GridPane>

               <!-- Submit Button -->
               <HBox alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                  <Button fx:id="ajout" text="Modifier Produit" onAction="#modifierProduit" style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10 40; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);">
                     <tooltip>
                        <Tooltip text="Enregistrer les modifications" />
                     </tooltip>
                  </Button>
               </HBox>
            </VBox>
         </VBox>
      </ScrollPane>
   </center>

   <!-- Bottom: Footer -->
   <bottom>
      <HBox alignment="CENTER" style="-fx-background-color: #E8F5E9; -fx-padding: 10; -fx-border-color: #C8E6C9; -fx-border-width: 1 0 0 0;">
         <Label text="© 2025 EL_FIRMA" style="-fx-font-size: 12px; -fx-text-fill: #2E7D32;" />
      </HBox>
   </bottom>
</BorderPane>
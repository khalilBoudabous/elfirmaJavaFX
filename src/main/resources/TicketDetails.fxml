<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.TicketDetailsController">
    <Label fx:id="lblEventTitle" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    <Label fx:id="lblEventDates"/>
    <Label fx:id="lblPrice"/>
    <Label fx:id="lblUserName"/>
    <Label fx:id="lblUserEmail"/>
    <ImageView fx:id="qrCodeImage" fitWidth="150" fitHeight="150" preserveRatio="true"/>
    <Button fx:id="btnDownload" text="Download QR Code" onAction="#downloadQRCode" disable="true"/>
</VBox>
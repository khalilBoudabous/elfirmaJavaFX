<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.UtilisateurController"
            prefHeight="400" prefWidth="600"
            stylesheets="@styles.css">

    <!-- Centered content wrapper -->
    <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
            <!-- Add style-class to labels -->
            <Label text="Rôle :" styleClass="form-label"/>

            <!-- Add style-class to text fields -->
            <TextField fx:id="nomField" promptText="Nom" styleClass="form-field"/>
            <TextField fx:id="prenomField" promptText="Prénom" styleClass="form-field"/>
            <TextField fx:id="emailField" promptText="Email" styleClass="form-field"/>
            <PasswordField fx:id="passwordField" promptText="Mot de passe" styleClass="form-field"/>
            <TextField fx:id="telephoneField" promptText="Téléphone" styleClass="form-field"/>

            <!-- Radio buttons container -->
            <HBox spacing="10" alignment="CENTER">
                <RadioButton fx:id="radioAgriculteur" text="Agriculteur" toggleGroup="$roleGroup" styleClass="radio-button"/>
                <RadioButton fx:id="radioExpert" text="Expert" toggleGroup="$roleGroup" styleClass="radio-button"/>
                <RadioButton fx:id="radioFournisseur" text="Fournisseur" toggleGroup="$roleGroup" styleClass="radio-button"/>
            </HBox>
            <!-- Dynamic fields -->
            <VBox fx:id="formAgriculteur" visible="false" managed="false">
                <TextField fx:id="adresseExploitationField" promptText="Adresse d'exploitation"/>
            </VBox>

            <VBox fx:id="formExpert" visible="false" managed="false">
                <TextField fx:id="domaineExpertiseField" promptText="Domaine d'expertise"/>
            </VBox>

            <VBox fx:id="formFournisseur" visible="false" managed="false">
                <TextField fx:id="nomEntrepriseField" promptText="Nom entreprise"/>
                <TextField fx:id="idFiscaleField" promptText="ID fiscale"/>
                <TextField fx:id="categorieProduitField" promptText="Catégorie produit"/>
            </VBox>

            <!-- Buttons -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Sign In" onAction="#ajouterUtilisateur"/>
                <Button text="Login" onAction="#goToLoginPage" />
            </HBox>
        </VBox>
    </StackPane>
</AnchorPane>
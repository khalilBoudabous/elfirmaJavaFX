<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane stylesheets="@stylesheet.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.AfficherEvenement"
            AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

   <AnchorPane AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0">
      <BorderPane AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="0.0">
         <top>
            <HBox style="-fx-background-color: #3E7B27;"
                  stylesheets="@stylesheet.css"
                  BorderPane.alignment="CENTER">
               <children>
                  <ImageView fitHeight="51.0" fitWidth="53.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Opera_Snapshot_2025-01-25_103545_www.brandcrowd.com.png" />
                     </image>
                  </ImageView>
                  <Button alignment="CENTER"
                          mnemonicParsing="false"
                          prefHeight="44.0"
                          prefWidth="178.0"
                          style="-fx-background-color: #3E7B27;"
                          stylesheets="@stylesheet.css"
                          text="Gestion événement"
                          textFill="WHITE" />
               </children>
            </HBox>
         </top>
         <center>
            <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
               <tabs>
                  <Tab text="Liste des événements">
                     <content>
                        <AnchorPane>
                           <TableView fx:id="tvEvenements"
                                      stylesheets="@stylesheet.css"
                                      AnchorPane.topAnchor="0.0"
                                      AnchorPane.bottomAnchor="0.0"
                                      AnchorPane.leftAnchor="0.0"
                                      AnchorPane.rightAnchor="0.0">
                              <columns>
                                 <TableColumn fx:id="colTitre" text="Titre" />
                                 <TableColumn fx:id="colNombrePlaces" text="Nombre de places" />
                                 <TableColumn fx:id="colPrix" text="Prix" />
                                 <TableColumn fx:id="colLieu" text="Lieu" />
                                 <TableColumn fx:id="colModifier" />
                                 <TableColumn fx:id="colSupprimer" text=" " />
                              </columns>
                              <effect>
                                 <Blend />
                              </effect>
                           </TableView>
                        </AnchorPane>
                     </content>
                  </Tab>
                  <Tab onSelectionChanged="#AfficherTickets" text="Voir tickets">
                     <content>
                        <AnchorPane>
                           <TableView fx:id="tvTickets"
                                      AnchorPane.topAnchor="0.0"
                                      AnchorPane.bottomAnchor="0.0"
                                      AnchorPane.leftAnchor="0.0"
                                      AnchorPane.rightAnchor="0.0">
                              <columns>
                                 <TableColumn fx:id="tcTitre" text="Titre evenement" />
                                 <TableColumn fx:id="tcPrix" text="Prix" />
                                 <TableColumn fx:id="tcPaye" text="Payement" />
                                 <TableColumn fx:id="tcNom" text="Nom" />
                                 <TableColumn fx:id="tcPrenom" text="Prénom" />
                                 <TableColumn fx:id="tcEmail" text="Email" />
                              </columns>
                           </TableView>
                        </AnchorPane>
                     </content>
                  </Tab>
               </tabs>
            </TabPane>
         </center>
         <left>
            <VBox style="-fx-background-color: #7EA76F;" stylesheets="@stylesheet.css" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false"
                          onAction="#AjouterEvenement"
                          prefHeight="44.0"
                          prefWidth="186.0"
                          style="-fx-background-color: #74A063;"
                          stylesheets="@stylesheet.css"
                          text="Ajouter évenement"
                          textFill="WHITE" />
                  <!-- New button to generate PDF of participant details -->
                  <Button mnemonicParsing="false"
                          onAction="#generatePDF"
                          prefHeight="44.0"
                          prefWidth="186.0"
                          style="-fx-background-color: #74A063;"
                          stylesheets="@stylesheet.css"
                          text="Générer PDF"
                          textFill="WHITE" />
               </children>
            </VBox>
         </left>
      </BorderPane>
   </AnchorPane>
</AnchorPane>
